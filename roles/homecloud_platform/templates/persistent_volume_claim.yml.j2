---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: '{{ service_volume_claim_name }}'
  namespace: '{{ service_volume_claim_namespace }}'
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: local-storage
  resources:
    requests:
      storage: '{{ service_volume_claim_size }}'